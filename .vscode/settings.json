{
    "files.autoSave": "onFocusChange",
    "svg.preview.background": "transparent",
    "standard.engine": "ts-standard",
    "standard.validate": [
        "javascript",
        "typescript",
    ],
    "standard.autoFixOnSave": true,
    "[typescript]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint",
        "editor.formatOnSave": true
    },
    "[javascript]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint",
        "editor.formatOnSave": true
    }
}